<%- include('../header') %>
    <!-- ***** Header Area End ***** -->

    <!-- ***** Main Banner Area Start ***** -->
    <div class="page-heading about-page-heading" id="top">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="inner-content">
                        <h2>Student Page</h2>
                        <span>Awesome, clean &amp; creative HTML5 Template</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ***** Main Banner Area End ***** -->

    <!-- ***** About Area Starts ***** -->
    <div class="about-us">
        <div class="container my-4" style="min-height: 700px;">
            <div class="row">
                <div class="col-md-12">
                    <h3>List of All Student</h3>
                    
                    <table class="mt-4 table table-dark table-bordered table-hover table-striped">
                        <tr>
                            <th>S.No.</th>
                            <th>Full Name</th>
                            <th>Age</th>
                            <th>Fee</th>
                            <th>Gender</th>
                            <th>Class</th>
                            <th>Edit</th>
                            
                        </tr>
                        <% result.forEach((x, n)=>{ %>
                            <tr>
                                <td><%= n+1 %></td>
                                <td><%= x.fullname %></td>
                                <td><%= x.age %></td>
                                <td><%= x.fee %></td>
                                <td><%= x.gender %></td>
                                <td><%= x.class %></td>
                                <td>
                                    <a href="/student/edit/<%= x._id %>" class="btn btn-info btn-sm">Edit</a>
                                </td>
                            </tr>
                        <% }) %>
                        
                    </table>
                    
                </div>
            </div>
        </div>
    </div>
    
    <%- include('../footer') %>