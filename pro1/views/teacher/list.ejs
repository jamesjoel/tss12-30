<%- include('../header') %>
    <!-- ***** Header Area End ***** -->

    <!-- ***** Main Banner Area Start ***** -->
    <div class="page-heading about-page-heading" id="top">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="inner-content">
                        <h2>Teachers Page</h2>
                        <span>Awesome, clean &amp; creative HTML5 Template</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ***** Main Banner Area End ***** -->

    <!-- ***** About Area Starts ***** -->
    <div class="about-us">
        <div class="container my-4" style="min-height: 700px;">
            <div class="row">
                <div class="col-md-12">
                    <h3>List of All Teachers</h3>
                    <% if(result.length > 0 ){ %>
                    <table class="mt-4 table table-dark table-bordered table-hover table-striped">
                        <tr>
                            <th>S.No.</th>
                            <th>Full Name</th>
                            <th>Contact</th>
                            <th>View</th>
                            <th>Delete</th>
                        </tr>
                        <% result.forEach((x, n)=>{ %>
                            <tr>
                                <td><%= n+1 %></td>
                                <td><%= x.full_name %></td>
                                <td><%= x.contact %></td>
                                <td><a href="/teacher/view/<%= x._id %>" class="btn btn-info btn-sm">View </a></td>
                                <td><a href="/teacher/delete/<%= x._id %>" class="btn btn-danger btn-sm">Delete</a></td>
                            </tr>
                        <% }) %>
                    </table>
                    <% }else{ %>
                        <div class="alert alert-danger mt-4">No Record Found</div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
    
    <%- include('../footer') %>