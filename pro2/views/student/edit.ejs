<%- include('../header') %>
    <!-- ***** Header Area End ***** -->

    <!-- ***** Main Banner Area Start ***** -->
    <div class="page-heading about-page-heading" id="top">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="inner-content">
                        <h2>Student Page</h2>
                        <span>Awesome, clean &amp; creative HTML5 Template</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ***** Main Banner Area End ***** -->

    <!-- ***** About Area Starts ***** -->
    <div class="about-us">
        <div class="container my-4" style="min-height: 700px;">
            <form action="/student/update/<%= result._id %>" method="post">
           <div class="row">
               <div class="col-md-6 offset-md-3">
                <div class="card" style="border: 1px solid #007BFF;">
                    <div class="card-header bg-primary">
                        <h5 class="text-light">Update Student</h5>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label>Full Name</label>
                            <input type="text" value="<%= result.fullname %>" name="fullname" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Age</label>
                            <input type="text" value="<%= result.age %>" name="age" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Fee</label>
                            <input type="text" value="<%= result.fee %>" name="fee" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Class</label>
                            <select name="class" class="form-control">
                                <option>Select</option>
                                <% for(var a = 1; a <= 12; a++){ %>
                                    <option <% if(result.class == a){ %> selected <% } %>><%= a %></option>
                                <% } %>
                            </select>
                        </div>
                        
                        <div class="form-group">
                            <label>Address</label>
                            <textarea class="form-control"  name="address"><%= result.address %></textarea>
                        </div>
                        
                        
                        <div class="form-group">
                            <label>Gender</label>
                            <br />
                            Boy <input <% if(result.gender =='boy') { %> checked <% } %>  type="radio" value="boy" name="gender" />
                            Girl <input <% if(result.gender =='girl') { %> checked <% } %> type="radio" value="girl" name="gender" />
                        </div>
                        
                    </div>
                    <div class="card-footer bg-primary">
                        <input type="submit" value="Update" class="btn btn-light" />
                    </div>
                </div>
               </div>
            </div>
        </form>
        </div>
    </div>
    
    <%- include('../footer') %>